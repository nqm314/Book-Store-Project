<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link href="../../styles/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="../../styles/headerStyle.css" />
    <script src="../../scripts/headerStaffScript.js" defer></script>
  </head>

  <body>
    <%- include('partial/headerAdmin') %>

    <div class="profile-container">
      <div class="profile-box">
        <div class="profile-sidebar">
          <h3>Khách hàng</h3>
          <div class="profile-info">
            <div class="info-box">
              <p><strong>ID</strong></p>
              <p class="info-value">0000001</p>
            </div>
          </div>
        </div>
        <div class="profile-details">
          <h2>Thông tin cá nhân</h2>
          <div class="info-details">
            <div class="info-box">
              <p class="info-field">Họ và tên</p>
              <p class="info-value">Quản lý</p>
            </div>

            <div class="info-box">
              <p class="info-field">Giới tính</p>
              <p class="info-value">Nam</p>
            </div>

            <div class="info-box">
              <p class="info-field">Tuổi</p>
              <p class="info-value">36</p>
            </div>

            <div class="info-box">
              <p class="info-field">Tên đăng nhập</p>
              <p class="info-value">Manager</p>
            </div>

            <div class="info-box">
              <p class="info-field">Mật khẩu</p>
              <p class="info-value">**********</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
