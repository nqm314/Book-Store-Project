<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/images/bookstore logo.jpg">
        <title>Đăng nhập</title>
        <link href="/styles/login.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <!-- <%- include('../templates/adminHeader') %> -->
        <div class="login-container">
            <div class="login-box">
                <h2>Đăng nhập</h2>
                <form action="/admin/login" method="post">
                    <input type="text" name="username" placeholder="Tên đăng nhập" 
                    <% if (typeof username != "undefined") { %> value="<%= username %>"<% } %> required/>
                    <input type="password" name="password" placeholder="Mật khẩu"
                    <% if (typeof password != "undefined") { %> value="<%= password %>"<% } %> required/>
                    <% if (typeof loginFailed != "undefined") { %>
                        <p>Tên đăng nhập hoặc mật khẩu không đúng</p>
                    <% } %>
                    <button type="submit">Đăng nhập</button>
                </form>
            </div>
        </div>
    </body>
